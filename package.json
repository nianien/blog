{
  "name": "skyfalling-blog",
  "version": "1.0.0",
  "description": "Skyfalling's personal blog built with Next.js and Tailwind CSS",
  "private": true,
  "author": "Skyfalling",
  "license": "MIT",
  "homepage": "https://www.skyfalling.cn",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:export": "NEXT_EXPORT=true next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next out .turbo",
    "export": "NEXT_EXPORT=true next build",
    "preview": "./scripts/preview.sh",
    "deploy": "gh-pages -d out",
    "help": "./scripts/help.sh"
  },
  "dependencies": {
    "@giscus/react": "^3.1.0",
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/react-syntax-highlighter": "^15.5.13",
    "date-fns": "^4.1.0",
    "gray-matter": "^4.0.3",
    "marked": "^16.1.1",
    "next": "15.3.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-syntax-highlighter": "^15.6.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "gh-pages": "^6.3.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "nextjs",
    "react",
    "typescript",
    "tailwindcss",
    "blog",
    "personal-website"
  ]
}
